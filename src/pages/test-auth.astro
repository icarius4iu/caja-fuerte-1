---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Auth Test">
  <main class="container mx-auto px-4 py-12">
    <div class="max-w-md mx-auto">
      <h1 class="text-4xl font-bold mb-4 text-center">Iniciar Sesión</h1>
      <p class="mb-8 text-center text-gray-500">
        Prueba la autenticación real de Firebase.
      </p>

      <div id="auth-container" class="p-8 border rounded-lg shadow-lg bg-white">
        <!-- Vista para usuario conectado -->
        <div id="logged-in-view" class="hidden">
          <h2 class="text-2xl font-semibold mb-4 text-center">¡Bienvenido!</h2>
          <div id="user-info" class="mb-4 text-center"></div>
          <button
            id="logout-btn"
            class="w-full bg-red-500 text-white font-bold py-2 px-4 rounded hover:bg-red-600 transition-colors"
          >
            Cerrar Sesión
          </button>
        </div>

        <!-- View for Guest (Login / Register / Forgot Password) -->
        <div id="guest-view">
          <div
            id="error-message"
            class="hidden mb-4 p-3 text-center bg-red-100 text-red-700 rounded"
          >
          </div>
          <div
            id="success-message"
            class="hidden mb-4 p-3 text-center bg-green-100 text-green-700 rounded"
          >
          </div>

          <!-- Login Form -->
          <form id="login-form">
            <h2 class="text-2xl font-semibold mb-6 text-center">
              Iniciar Sesión
            </h2>
            <div class="mb-4">
              <label for="login-email" class="block text-sm font-bold mb-2"
                >Correo Electrónico</label
              >
              <input
                type="email"
                id="login-email"
                name="email"
                required
                autocomplete="email"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div class="mb-6">
              <label for="login-password" class="block text-sm font-bold mb-2"
                >Contraseña</label
              >
              <input
                type="password"
                id="login-password"
                name="password"
                required
                autocomplete="current-password"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition-colors mb-4"
            >
              Iniciar Sesión
            </button>
            <div class="text-center text-sm">
              <a
                href="#"
                id="to-register-link"
                class="text-blue-500 hover:underline"
                >¿No tienes cuenta? Regístrate</a
              >
              <br />
              <a
                href="#"
                id="to-forgot-password-link"
                class="text-gray-500 hover:underline"
                >¿Olvidaste tu contraseña?</a
              >
            </div>
          </form>

          <!-- Register Form -->
          <form id="register-form" class="hidden">
            <h2 class="text-2xl font-semibold mb-6 text-center">Registrarse</h2>
            <div class="mb-4">
              <label for="register-email" class="block text-sm font-bold mb-2"
                >Correo Electrónico</label
              >
              <input
                type="email"
                id="register-email"
                name="email"
                required
                autocomplete="email"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
            <div class="mb-4">
              <label
                for="register-password"
                class="block text-sm font-bold mb-2">Contraseña</label
              >
              <input
                type="password"
                id="register-password"
                name="password"
                required
                autocomplete="new-password"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
            <div class="mb-6">
              <label
                for="register-confirm-password"
                class="block text-sm font-bold mb-2">Confirmar Contraseña</label
              >
              <input
                type="password"
                id="register-confirm-password"
                name="confirm-password"
                required
                autocomplete="new-password"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-600 transition-colors mb-4"
            >
              Crear Cuenta
            </button>
            <div class="text-center text-sm">
              <a
                href="#"
                id="to-login-link-1"
                class="text-blue-500 hover:underline"
                >¿Ya tienes cuenta? Inicia Sesión</a
              >
            </div>
          </form>

          <!-- Forgot Password Form -->
          <form id="forgot-password-form" class="hidden">
            <h2 class="text-2xl font-semibold mb-6 text-center">
              Recuperar Contraseña
            </h2>
            <p class="mb-4 text-sm text-gray-600 text-center">
              Ingresa tu correo y te enviaremos un enlace para restablecer tu
              contraseña.
            </p>
            <div class="mb-6">
              <label for="forgot-email" class="block text-sm font-bold mb-2"
                >Correo Electrónico</label
              >
              <input
                type="email"
                id="forgot-email"
                name="email"
                required
                autocomplete="email"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
              />
            </div>
            <button
              type="submit"
              class="w-full bg-yellow-500 text-white font-bold py-2 px-4 rounded hover:bg-yellow-600 transition-colors mb-4"
            >
              Enviar Enlace
            </button>
            <div class="text-center text-sm">
              <a
                href="#"
                id="to-login-link-2"
                class="text-blue-500 hover:underline">Volver a Iniciar Sesión</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
</MainLayout>

<script>
  import {
    onAuthStateChange,
    login,
    logout,
    signup,
    passwordReset,
  } from "../services/firebaseAuthentication/auth";

  const document = (globalThis as any).document;
  const FormData = (globalThis as any).FormData;

  const guestViewEl = document.getElementById("guest-view")!;
  const loggedInViewEl = document.getElementById("logged-in-view")!;
  const userInfoEl = document.getElementById("user-info")!;
  const logoutBtn = document.getElementById("logout-btn")!;

  const loginForm = document.getElementById("login-form")!;
  const registerForm = document.getElementById("register-form")!;
  const forgotPasswordForm = document.getElementById("forgot-password-form")!;

  const errorMessageEl = document.getElementById("error-message")!;
  const successMessageEl = document.getElementById("success-message")!;

  // Links to switch views
  const toRegisterLink = document.getElementById("to-register-link")!;
  const toForgotPasswordLink = document.getElementById(
    "to-forgot-password-link",
  )!;
  const toLoginLinks = [
    document.getElementById("to-login-link-1")!,
    document.getElementById("to-login-link-2")!,
  ];

  // Helper to show/hide forms
  // Helper to show/hide forms
  function showForm(formId: string) {
    errorMessageEl.classList.add("hidden");
    successMessageEl.classList.add("hidden");

    ([loginForm, registerForm, forgotPasswordForm] as any).forEach(
      (form: any) => {
        if (form.id === formId) {
          form.classList.remove("hidden");
        } else {
          form.classList.add("hidden");
        }
      },
    );
  }

  // Event Listeners for switching views
  toRegisterLink.addEventListener("click", (e: any) => {
    e.preventDefault();
    showForm("register-form");
  });
  toForgotPasswordLink.addEventListener("click", (e: any) => {
    e.preventDefault();
    showForm("forgot-password-form");
  });
  (toLoginLinks as any).forEach((link: any) =>
    link.addEventListener("click", (e: any) => {
      e.preventDefault();
      showForm("login-form");
    }),
  );

  // 1. Escuchar cambios de estado de autenticación
  onAuthStateChange((user) => {
    console.log(
      "[AUTH STATE CHANGE]",
      user ? `User logged in: ${user.email}` : "User logged out",
    );
    if (user) {
      // Force hide guest view using style
      guestViewEl.style.display = "none";
      guestViewEl.classList.add("hidden");

      // Show logged in view
      loggedInViewEl.style.display = "block";
      loggedInViewEl.classList.remove("hidden");

      userInfoEl.innerHTML = `
        <img src="${user.photoURL || "https://www.gravatar.com/avatar?d=mp"}" alt="Avatar" class="w-16 h-16 rounded-full mx-auto mb-2">
        <p><strong>Email:</strong> ${user.email}</p>
        <p><strong>UID:</strong> ${user.uid}</p>
      `;
      // Check if this was a new registration
      // (optional: could show a welcome message here)
    } else {
      // Show guest view
      guestViewEl.style.display = "block";
      guestViewEl.classList.remove("hidden");

      // Default to login form
      showForm("login-form");

      // Hide logged in view
      loggedInViewEl.style.display = "none";
      loggedInViewEl.classList.add("hidden");
    }
  });

  // 2. Manejar el envío del formulario de inicio de sesión
  loginForm.addEventListener("submit", (event: any) => {
    event.preventDefault();
    errorMessageEl.classList.add("hidden");

    const formData = new FormData(event.target as any);
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;

    login(email, password)
      .then((userCredential) => {
        console.log("Login successful with Firebase:", userCredential.user);
      })
      .catch((error) => {
        console.error("Firebase Login Error:", error.code);
        errorMessageEl.textContent = getFirebaseErrorMessage(error.code);
        errorMessageEl.classList.remove("hidden");
      });
  });

  // 3. Manejar el envío del formulario de registro
  registerForm.addEventListener("submit", (event: any) => {
    event.preventDefault();
    errorMessageEl.classList.add("hidden");

    const formData = new FormData(event.target as any);
    const email = formData.get("email") as string;
    const password = formData.get("password") as string;
    const confirmPassword = formData.get("confirm-password") as string;

    if (password !== confirmPassword) {
      errorMessageEl.textContent = "Las contraseñas no coinciden.";
      errorMessageEl.classList.remove("hidden");
      return;
    }

    signup(email, password)
      .then((userCredential) => {
        console.log("Signup successful:", userCredential.user);
        // Auth state change will handle transitions
      })
      .catch((error) => {
        console.error("Firebase Signup Error:", error.code);
        errorMessageEl.textContent = getFirebaseErrorMessage(error.code);
        errorMessageEl.classList.remove("hidden");
      });
  });

  // 4. Manejar el envío del formulario de recuperación
  forgotPasswordForm.addEventListener("submit", (event: any) => {
    event.preventDefault();
    errorMessageEl.classList.add("hidden");
    successMessageEl.classList.add("hidden");

    const formData = new FormData(event.target as any);
    const email = formData.get("email") as string;

    passwordReset(email)
      .then(() => {
        successMessageEl.textContent =
          "Se ha enviado un correo para restablecer tu contraseña.";
        successMessageEl.classList.remove("hidden");
        // Optionally switch to login after a delay
        setTimeout(() => showForm("login-form"), 3000);
      })
      .catch((error) => {
        console.error("Firebase Reset Error:", error.code);
        errorMessageEl.textContent = getFirebaseErrorMessage(error.code);
        errorMessageEl.classList.remove("hidden");
      });
  });

  // 5. Manejar el cierre de sesión
  logoutBtn.addEventListener("click", () => {
    console.log("Logout button clicked! Attempting to sign out.");
    logout()
      .then(() => {
        console.log("Logout successful! onAuthStateChange should now trigger.");
      })
      .catch((error) => {
        console.error("Firebase Logout Error in .catch():", error.code);
        console.error("Full Firebase Logout Error object:", error);
      });
  });

  // Función para traducir códigos de error de Firebase
  function getFirebaseErrorMessage(errorCode: string) {
    switch (errorCode) {
      case "auth/invalid-email":
        return "El formato del correo electrónico no es válido.";
      case "auth/user-not-found":
        return "No se encontró ningún usuario con este correo.";
      case "auth/wrong-password":
        return "La contraseña es incorrecta. Inténtalo de nuevo.";
      case "auth/too-many-requests":
        return "Hemos bloqueado las solicitudes desde este dispositivo por actividad inusual. Inténtalo más tarde.";
      case "auth/invalid-credential":
        return "Las credenciales no son válidas.";
      case "auth/email-already-in-use":
        return "Ya existe una cuenta con este correo electrónico.";
      case "auth/weak-password":
        return "La contraseña debe tener al menos 6 caracteres.";
      default:
        return `Ocurrió un error inesperado al iniciar sesión (${errorCode}).`;
    }
  }
</script>
