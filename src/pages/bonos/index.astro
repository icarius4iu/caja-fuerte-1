---
import MainLayout from "../../layouts/MainLayout.astro";
import BonusList from "../../components/svelte/bonuses/BonusList.svelte";
import { bonuses } from "../../data/bonuses";
---

<MainLayout title="Bonos de Bienvenida - Caja Fuerte">
    <div
        class="bg-background-light dark:bg-background-dark min-h-screen pb-20 pt-24 overflow-hidden relative"
    >
        <!-- Background Decor -->
        <div
            class="absolute top-0 inset-x-0 h-[500px] bg-gradient-to-b from-secondary to-background-dark z-0"
        >
        </div>
        <div
            class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/5 blur-[120px] rounded-full z-0 pointer-events-none"
        >
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <!-- Hero Title -->
            <div class="text-center mb-12">
                <h1
                    class="text-4xl md:text-5xl font-display font-bold text-white mb-4"
                >
                    Bonos de Bienvenida
                </h1>
                <p class="text-gray-400 text-lg max-w-2xl mx-auto">
                    Descubre nuestros increíbles bonos diseñados para maximizar
                    tu experiencia de juego
                </p>
            </div>

            <BonusList client:load bonuses={bonuses} />
        </div>
    </div>
</MainLayout>
