---
import PortalNav from '../components/astro/PortalNav.astro';
import LoadingSpinner from '../components/astro/LoadingSpinner.astro';
---
<!DOCTYPE html>
<html class="scroll-smooth dark" lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portal - Caja Fuerte</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin rel="preconnect" href="https://fonts.gstatic.com" />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@400;600;700;800&display=swap"
        rel="stylesheet"
    />
    <link
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        rel="stylesheet"
    />
    <script is:inline src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
    <script is:inline>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#0cf2f2",
                        secondary: "#042f40",
                        accent: {
                            yellow: "#F2D230",
                            orange: "#F27F1B",
                        },
                        "background-light": "#f8fafc",
                        "background-dark": "#042f40",
                        "text-main-light": "#042f40",
                        "text-main-dark": "#ffffff",
                        "surface-light": "#ffffff",
                        "surface-dark": "#063b50",
                        "surface-darker": "#03222f",
                    },
                    fontFamily: {
                        display: ["Outfit", "sans-serif"],
                        body: ["Inter", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.75rem",
                        xl: "1rem",
                        "2xl": "1.5rem",
                        "3xl": "2rem",
                    },
                },
            },
        };
    </script>
    <style>
        .text-gradient {
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }
        .no-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</head>
<body class="bg-background-dark text-text-main-dark font-body antialiased">
    <LoadingSpinner message="Cargando portal..." />
    <PortalNav />
    <main class="min-h-screen">
        <slot />
    </main>
</body>
</html>

